<% include header %>
		
		<% if (!user) { %>
			<div class="hero-unit">
				<h1>Welcome to Microblog</h1><p>
				<p>Microblog is development using Node.js & Express(Backend), Bootstrap(FrontEnd), MongoDB(Database), Redis(Session)</p> <p>
				<p>Current Function:  Register, Login/Logout, Post/View, Mutiple Process/CPU support, User/Error Log, Error Recovery </p> <p>
				<a class="btn btn-primary btn-large" href="/signin">Login</a>
				<a class="btn btn-large" href="/signup">Register</a> </p>
			</div>
		<% } else { %>
			<form method="post" action="/post" class="well form-inline center" style="text-align: center;">
				<input type="text" class="span8" name="post">
				<button type="submit" class="btn btn-success"><i class="icon-comment icon-white"></i> Say</button> 
			</form>
		<% } %>
		<% posts.forEach(function(post, index) {
      		if (index % 3 == 0) { %>
        		<div class="row">
    		<%} %>
			<div class="span4">
				<h2><a href="/u/<%= post.user %>"><%= post.user %></a> Said</h2> 
				<p><small><%= post.time %></small></p>
				<p><%= post.post %></p>
  			</div>
			<% if (index % 3 == 2) { %>
    			</div><!-- end row -->
			<% } %>
		<%}) %>
		<% if (posts.length % 3 != 0) { %>
  			</div><!-- end row -->
		<%} %>
<% include footer %>		
		
		